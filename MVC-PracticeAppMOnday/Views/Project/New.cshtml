@model ProjectViewModel

@{
    ViewData["Title"] = "New";
}

<nav>
        <a class="btn btn-info" href="/project">
            View All Projects
        </a>
</nav>

<section class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                    <h4>Create New Project</h4>
            </div>
            <div class="card-body">

                    <form 
                        asp-action="NewProject" 
                        asp-controller="Project"
                        method="post"
                    >
                        <div class="mb-3">
                            <label>Project Id</label>
                            <input 
                                asp-for=Id
                                class="form-control" 
                                type="text" 
                                placeholder="Project Id#" 
                                style="width: 100px;" 
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Project Name</label>
                            <input
                                asp-for=Name
                                type="text" 
                                class="form-control" 
                            />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea 
                                asp-for=Description
                                class="form-control"
                            >
                            </textarea>
                        </div>
                        <button
                            type="submit"
                            class="btn btn-primary"
                        >
                            Create Project
                        </button>
                    </form>
              </div>
         </div>
    </div>
</section>


